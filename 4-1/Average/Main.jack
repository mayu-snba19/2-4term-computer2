class Main {
    function void main() {
        var int length;
        var int i, x, sum;

        let length = Keyboard.readInt("How many numbers? ");
        let sum = 0;
        let i = 0;
        while (i < length) {
            let x = Keyboard.readInt("Enter a number: ");
            let sum = sum + x;
            let i = i + 1;
        }
        do Output.printString("The average is ");
        do Output.printInt(sum / length);
        return;
    }
}
